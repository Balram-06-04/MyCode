<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Auth Page</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <style>
      /* --- SIMPLIFIED TOGGLE CSS (No 3D/Animation) --- */
      
      .flip-card {
        position: relative;
      }

      .flip-card-inner {
        width: 100%;
        height: 100%;
        position: relative;
        /* Removed background color from inner, shadows still apply */
      }

      .flip-card-front,
      .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        
        opacity: 1;
        visibility: visible;
        transition: opacity 0s;
      }

      /* Initially hide the Register form */
      .flip-card-back {
        opacity: 0;
        visibility: hidden;
      }

      /* When parent is 'toggled': */
      .flip-card.toggled .flip-card-front {
        opacity: 0;
        visibility: hidden;
      }
      .flip-card.toggled .flip-card-back {
        opacity: 1;
        visibility: visible;
      }
    </style>
  </head>
  <body
    class="bg-[url('https://www.shutterstock.com/shutterstock/videos/3686789041/thumb/1.jpg?ip=x480')] bg-cover bg-[110%] bg-center min-h-screen flex items-center justify-center"
  >
    <div class="flip-card w-full max-w-md h-[450px] relative">
      <div
        class="flip-card-inner rounded-2xl shadow-xl overflow-hidden" 
      >
        <div class="flip-card-front bg-transparent text-white"> 
          <h2 class="text-2xl font-bold text-white text-center mb-6">
            Login
          </h2>
          <form action="/users/login" method="POST" class="space-y-4 text-white">
            <input
              type="email"
              name="email"
              placeholder="Email"
              class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 text-white focus:outline-none text-gray-800"
              required
            />
            <input
              type="password"
              name="password"
              placeholder="Password"
              class="w-full px-4 py-2 border text-white rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none text-gray-800"
              required
            />
            <button
              type="submit"
              class="w-full bg-purple-500 text-white py-2 rounded-lg hover:bg-purple-600 transition"
            >
              Login
            </button>
          </form>
          <p class="text-sm text-center mt-4 text-white">
            Don't have an account?
            <span
              class="text-purple-300 cursor-pointer hover:underline"
              id="showRegister"
              >Register</span
            >
          </p>
        </div>

        <div class="flip-card-back bg-transparent text-white"> 
          <h2 class="text-2xl font-bold text-white text-center mb-6">
            Register
          </h2>
          <form action="/users/register" method="POST" class="space-y-4">
            <input
              type="text"
              name="name"
              placeholder="Name"
              class="w-full px-4 py-2 text-white border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none text-gray-800"
              required
            />
            <input
              type="email"
              name="email"
              placeholder="Email"
              class="w-full px-4 py-2 text-white border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none text-gray-800"
              required
            />
            <input
              type="password"
              name="password"
              placeholder="Password"
              class="w-full px-4 py-2 border text-white rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none text-gray-800"
              required
            />
            <button
              type="submit"
              class="w-full bg-purple-500 text-white py-2 rounded-lg hover:bg-purple-600 transition"
            >
              Register
            </button>
          </form>
          <p class="text-sm text-center mt-4 text-white">
            Already have an account?
            <span
              class="text-purple-300 cursor-pointer hover:underline"
              id="showLogin"
              >Login</span
            >
          </p>
        </div>
      </div>
    </div>

    <script>
      const flipCard = document.querySelector(".flip-card");
      const showRegister = document.getElementById("showRegister");
      const showLogin = document.getElementById("showLogin");

      showRegister.addEventListener("click", () => {
        flipCard.classList.add("toggled");
      });

      showLogin.addEventListener("click", () => {
        flipCard.classList.remove("toggled");
      });
    </script>
  </body>
</html>